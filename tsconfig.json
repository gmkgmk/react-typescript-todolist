{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noEmitOnError": false,
    "lib": ["es6", "dom"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@": ["/src"],
      "@utils": ["/src/utils"]
    }
  },
  "include": ["./src", "types/types.d.ts", "src/layout/.tsx"],
  "exclude": ["node_modules", "webpack"]
}
